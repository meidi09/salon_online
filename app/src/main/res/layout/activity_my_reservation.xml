<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyReservation"
    android:background="@drawable/my_resv_bg">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="310dp"
            android:alpha="0"
            ></Button>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="360dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/my_resv_card"
            android:layout_marginTop="32dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men's Hair Cut"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="28dp"
                ></TextView>

            <TextView
                android:layout_width="208dp"
                android:layout_height="30dp"
                android:text="Salon A"
                android:background="@drawable/button_bg"
                android:textSize="16dp"
                android:fontFamily="@font/nunito_bold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_marginLeft="26dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                ></TextView>

            <TextView
                android:layout_width="208dp"
                android:layout_height="30dp"
                android:text="Jl. Hasanudin 19 No. 199"
                android:background="@drawable/button_bg"
                android:textSize="16dp"
                android:fontFamily="@font/nunito_bold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_marginLeft="26dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                ></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:fontFamily="@font/nunito_bold"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        ></TextView>

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="29dp"
                        android:text="12:00"
                        android:background="@drawable/button_bg"
                        android:textSize="16dp"
                        android:fontFamily="@font/nunito_bold"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="5dp"
                        ></TextView>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="23dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:fontFamily="@font/nunito_bold"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            ></TextView>

                        <TextView
                            android:layout_width="108dp"
                            android:layout_height="29dp"
                            android:text="15/05/20XX"
                            android:background="@drawable/button_bg"
                            android:textSize="16dp"
                            android:fontFamily="@font/nunito_bold"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_marginTop="5dp"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                ></TextView>

            <TextView
                android:layout_width="208dp"
                android:layout_height="30dp"
                android:text="Confirmed"
                android:background="@drawable/button_bg"
                android:textSize="16dp"
                android:fontFamily="@font/nunito_bold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_marginLeft="26dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                ></TextView>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>